.page

  .cover
    %h1= t('welcome')
    %p= t('welcome_p')

  #pins.transitions-enabled
    .col-md-3.wrapper
      .panel.panel-default.panel-action
        .panel-body
          = link_to 'Upload', upload_path, {id: 'upload-button'}

      .panel.panel-default
        .panel-content
          .panel-body
            %h3 Hashtags
            .hashtags-container
              - @tags.each do |tag|
                .hashtag{href: "#"}
                  = link_to("##{tag}", get_mark_tag_url(tag))
                  = link_to get_unmark_tag_url(tag) do
                    %span.close Ã—
      .panel.panel-default
        .panel-content
          .panel-body
            = link_to "view all", family_bonds_path, class: "pull-right orange help"
            %h3 Friends
            - current_user.family.each do |friend|
              = link_to user_path(friend), class: "friend", title: "#{friend.full_name}" do
                = image_tag friend.avatar, width: 30, height: 30

    .col-md-9
      - @users.each do |user|
        .col-md-3
          .col-md-12
            = image_tag user.avatar.url, :class => 'img-responsive'
          .col-md-12
            = user.full_name
          .col-md-12
            - if current_user.friend_with? user
              You are already friends
            - elsif current_user.invited? user
              Pending request
            - elsif user.invited? current_user
              = link_to 'Confirm Friend', friend_path(user),
                :class => 'btn btn-default', :method => :put
            - else
              = link_to 'Add Friend', friends_path(:user_id => user),
                :class => 'btn btn-default', :method => :post




