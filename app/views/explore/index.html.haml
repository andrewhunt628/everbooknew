.page

  .cover
    %h1= t('welcome')
    %p= t('welcome_p')

  #pins.transitions-enabled
    .col-md-3.wrapper
      = render :partial => 'shared/sidebar', :locals => {:tags => @tags}

    .col-md-9
      .panel.panel-default
        .panel-body
          = link_to 'PEOPLE NEAR YOU', '#',
            :class => 'tab-item active'



    .col-md-9
      - @users.each do |user|
        - next if user.invited_user?

        .user-container
          = image_tag user.avatar.url

          .name= user.full_name
          .location= user.address

          - if current_user.friends_with? user
            = link_to '#', :class => 'add-friend-text', :disabled => true do
              .add-friend-btn
                .text ALREADY FRIENDS

          - elsif current_user.pending_friends.include? user
            = link_to '#', :class => 'add-friend-text', :disabled => true do
              .add-friend-btn
                .text PENDING REQUEST

          - elsif current_user.requested_friends.include? user
            = link_to friend_path(user), :class => 'add-friend-text' do
              .add-friend-btn
                .text CONFIRM FRIEND
          - else
            = link_to friends_path(:user_id => user), :class => 'add-friend-text' do
              .add-friend-btn
                .text ADD TO FRIENDS

:coffee
  new App.Explore el: $('.page')

