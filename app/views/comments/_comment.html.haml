%table.comment
  %tr
    %td.icon
      = image_tag user.avatar, :width => 40, :height => 40,
        :class => 'img img-circle'

    %td.message
      %span.name= user.decorate.full_name
      %span.content
        = comment.try(:text)
      %p.info
        = comment.try(:created_at).try(:to_time)
