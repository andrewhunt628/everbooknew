        %li.user-menu
          %a.dropdown-toggle{href: "#", 'data-toggle' => "dropdown", 'aria-haspopup' => "true", 'aria-expanded' => "false"}
            %span.avatar-mini
              = image_tag current_user.avatar(:thumb), width: 40, height: 40
            %span.welcome Welcome #{current_user.decorate.full_name}
            %span.caret
          %ul.dropdown-menu
            %li.responsive
              %a{href: "/explore"}  Explore
            %li.responsive
              %a{href: "/albums"}  My albums
            %li.responsive
